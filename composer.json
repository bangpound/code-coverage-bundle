{
    "name": "vipsoft/code-coverage-bundle",
    "description": "Remote code coverage collector",
    "license": "BSD-2-Clause",
    "authors": [
        {
            "name": "Anthon Pang",
            "email": "apang@softwaredevelopment.ca"
        }
    ],
    "require": {
        "php": ">=5.3.10",
        "symfony/config": "~2.2",
        "symfony/dependency-injection": "~2.2",
        "symfony/http-kernel": "~2.2",
        "symfony/http-foundation": "~2.2",
        "vipsoft/code-coverage-common": "2.5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "mikey179/vfsStream": "1.2.*"
    },
    "autoload": {
        "psr-0": {
            "VIPSoft\\CodeCoverageBundle": "src/"
        }
    },
    "keywords": [
        "bdd", "behat", "phpunit", "code", "coverage", "testing"
    ]
}
